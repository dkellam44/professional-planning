# === Infisical Server Environment ===
# Copy to .env and fill in secure values before deploying.

# Postgres (internal only)
POSTGRES_DB=infisical
POSTGRES_USER=infisical
POSTGRES_PASSWORD=CHANGE_ME

# Application database connection string (Postgres)
DATABASE_URL=postgresql://infisical:CHANGE_ME@infisical-db:5432/infisical
DB_CONNECTION_URI=postgresql://infisical:CHANGE_ME@infisical-db:5432/infisical

# Cryptography
ENCRYPTION_KEY=CHANGE_TO_32_BYTE_BASE64
NEXTAUTH_SECRET=GENERATE_SECURE_RANDOM
NEXTAUTH_URL=https://infisical.bestviable.com
SITE_URL=https://infisical.bestviable.com
AUTH_SECRET=
TELEMETRY_ENABLED=false

# Optional Redis cache (set REDIS_TLS=true if using TLS URL)
REDIS_URL=redis://infisical-redis:6379
REDIS_TLS=false

# Email (optional but recommended for invites/password resets)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_ADDRESS=alerts@bestviable.com
