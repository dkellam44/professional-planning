# Portfolio infrastructure environment template

# Coda API credentials (replace with actual token before running services)
CODA_API_KEY=replace-me
DOC_ID=replace-me

# DigitalOcean MCP (Tier 1)
DIGITALOCEAN_API_TOKEN=replace-me
DIGITALOCEAN_SERVICES=apps,networking,droplets,databases
DIGITALOCEAN_API_ENDPOINT=https://api.digitalocean.com
DIGITALOCEAN_LOG_LEVEL=info

# Cloudflare MCP wrapper
CLOUDFLARE_REMOTE_URL=https://docs.mcp.cloudflare.com/mcp
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_HEADERS=Authentication: Bearer ${CLOUDFLARE_API_TOKEN}
CLOUDFLARE_TRANSPORT_STRATEGY=http-first
CLOUDFLARE_CALLBACK_PORT=
CLOUDFLARE_IGNORE_TOOLS=

# Base domain + emails
DOMAIN=bestviable.com
LETSENCRYPT_EMAIL=admin@bestviable.com

# n8n database + admin (example values only)
POSTGRES_PASSWORD=replace-me
N8N_ADMIN_EMAIL=ops@example.com
N8N_ADMIN_PASSWORD=replace-me
N8N_ENCRYPTION_KEY=replace-me

# Cloudflare tunnel token placeholder
CF_TUNNEL_TOKEN=replace-me
