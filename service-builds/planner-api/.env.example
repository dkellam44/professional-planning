# Planner API Environment Configuration

# Service
SERVICE_NAME=Planner API
SERVICE_VERSION=0.2.0
SERVICE_DOMAIN=planner.bestviable.com
PORT=8091
LOG_LEVEL=INFO

# Postgres Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=your_postgres_password

# Memory Gateway
MEMORY_GATEWAY_URL=http://memory-gateway:8090

# Coda MCP (optional)
CODA_MCP_URL=http://coda-mcp:8080

# LLM (OpenRouter)
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
PROMPT_TOKEN_COST_USD=0.000015
COMPLETION_TOKEN_COST_USD=0.000075

# Langfuse (optional - for LLM observability)
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_SECRET_KEY=your_langfuse_secret_key
LANGFUSE_HOST=https://cloud.langfuse.com
LANGFUSE_ENABLED=true

# Google Calendar
GCAL_CREDENTIALS_PATH=/app/credentials/gcal.json
GCAL_TIMEZONE=America/Los_Angeles

# Client (default client ID)
CLIENT_ID=1

# Timeouts
REQUEST_TIMEOUT_SECONDS=30.0
