{
  "name": "@bestviable/mcp-auth-middleware",
  "version": "1.0.0",
  "description": "Reusable authentication middleware for MCP servers with Cloudflare Access JWT validation and PostgreSQL token storage",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "scripts/**/*",
    "docs/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "prepublishOnly": "npm run build && npm run test:ci",
    "migrate": "node dist/scripts/migrate-env-to-postgres.js",
    "migrate:dev": "ts-node src/scripts/migrate-env-to-postgres.ts"
  },
  "keywords": [
    "mcp",
    "authentication",
    "cloudflare-access",
    "jwt",
    "middleware",
    "express",
    "postgresql",
    "encryption"
  ],
  "author": "BestViable",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "pg": "^8.11.3",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/jest": "^29.5.8",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.1",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@types/supertest": "^2.0.16",
    "supertest": "^6.3.3"
  },
  "peerDependencies": {
    "express": "^4.18.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bestviable/mcp-auth-middleware.git"
  },
  "bugs": {
    "url": "https://github.com/bestviable/mcp-auth-middleware/issues"
  },
  "homepage": "https://github.com/bestviable/mcp-auth-middleware#readme"
}